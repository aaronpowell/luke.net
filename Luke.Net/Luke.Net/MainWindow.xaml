<Window x:Class="Luke.Net.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:LuceneIndex="clr-namespace:Luke.Net.Features.LuceneIndex" xmlns:Popup="clr-namespace:Luke.Net.Features.Popup" Title="Luke.Net - A Lucene.Net Index Toolbox" Height="425" Width="825" WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="DarkGray" Offset="0"/>
            <GradientStop Color="Black" Offset="0.2"/>
            <GradientStop Color="Gray" Offset="0.5"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Border Margin="10" Style="{StaticResource StandardBorder}" BorderBrush="Blue" Background="White" >
        <DockPanel Margin="2">
            <Popup:OpenIndexView DockPanel.Dock="Top" />
            <LuceneIndex:LoadIndexView x:Name="indexView" />
        </DockPanel>
    </Border>
</Window>
