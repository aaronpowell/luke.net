<Application x:Class="Luke.Net.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Luke.Net.ValueConverters"
             >
    <Application.Resources>
        <converters:PercentageValueConverter x:Key="PercentageConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:BooleanToWordValueConverter x:Key="BoolToWord" />
        
        <Style x:Key="SmallFont" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10" />
        </Style>
        <Style x:Key="Emphasise" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Application.Resources>
</Application>
