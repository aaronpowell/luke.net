<Page x:Class="Luke.Net.Views.Popup.OpenIndexPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
	  mc:Ignorable="d" 
	  d:DesignHeight="300" d:DesignWidth="300"
	Title="OpenIndexPage">
	<StackPanel Margin="10">
		<Form>
            <Field For="{Binding IndexPath}" />
            <Field For="{Binding ReadOnly}" />
		</Form>
        <Button Content="Open Index" IsDefault="True" HorizontalAlignment="Right">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <NavigateControllerAction Controller="LuceneIndex" Action="LoadIndex">
                        <NavigateControllerAction.Parameters>
                            <Parameter ParameterName="indexInfo" Value="{Binding}" />
                        </NavigateControllerAction.Parameters>
                    </NavigateControllerAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
	</StackPanel>
</Page>
